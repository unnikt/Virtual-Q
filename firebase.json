{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "main"
      },
      {
        "source": "/home",
        "function": "home"
      },
      {
        "source": "/settings",
        "function": "settings"
      },
      {
        "source": "/add",
        "function": "dbstore"
      },
      {
        "source": "/delete",
        "function": "dbstore"
      },
      {
        "source": "/finduser",
        "function": "dbstore"
      },
      {
        "source": "/getbid",
        "function": "dbstore"
      },
      {
        "source": "/calendar",
        "function": "calendar"
      },
      {
        "source": "/saveslot",
        "function": "calendar"
      },
      {
        "source": "/checkin",
        "function": "calendar"
      },
      {
        "source": "/services",
        "function": "services"
      },
      {
        "source": "/vwservices",
        "function": "services"
      },
      {
        "source": "/createsp",
        "function": "services"
      },
      {
        "source": "/addservice",
        "function": "services"
      },
      {
        "source": "/remservice",
        "function": "services"
      },
      {
        "source": "/editservice",
        "function": "services"
      },
      {
        "source": "/getevents",
        "function": "events"
      },
      {
        "source": "/evntstatus",
        "function": "events"
      },
      {
        "source": "/addResType",
        "function": "resources"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "firestore": {
      "port": 5002
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}

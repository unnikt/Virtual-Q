{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {"source": "/","function": "main"},
      {"source": "/settings","function": "settings"},
      {"source": "/add","function": "dbstore"},
      {"source": "/delete","function": "dbstore"},
      {"source": "/skedules","function": "skedules"},
      {"source": "/saveslot","function": "skedules"},
      {"source": "/newslot","function": "skedules"},
      {"source": "/editslot","function": "skedules"},
      {"source": "/delslot","function": "skedules"},
      {"source": "/checkin","function": "skedules"},
      {"source": "/services","function": "services"},
      {"source": "/createsp","function": "services"},
      {"source": "/addservice","function": "services"},
      {"source": "/remservice","function": "services"},
      {"source": "/editservice","function": "services"}
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "firestore": {
      "port": 5002
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
<body>
    <div class="bbdr" style="display: flex;">
        <p class="apptitle"> VirQ.app</p>
        <i id="mainIcn" class="material-icons gicon-regular" style="z-index: 2;" onclick="togmenu()">menu</i>
    </div>
    {{{body}}}
    <script>
        function get(el) { return document.getElementById(el) }
        const mainNav = get('mainNav');
        const mainIcn = get('mainIcn');
        function togmenu() {
            if (mainNav.style.width == '100%') { mainNav.style.width = "0%"; mainIcn.style.color = 'var(--primary-color)'; mainIcn.innerText = 'menu'; }
            else { mainNav.style.width = '100%'; mainIcn.style.color = 'white'; mainIcn.innerText = 'close'; }
        }
    </script>
</body>

